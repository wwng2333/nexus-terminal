{
  "compilerOptions": {
    "target": "ES2016", 
    "module": "NodeNext", 
    "moduleResolution": "NodeNext", 
    "outDir": "./dist", 
    "rootDir": "./src", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true 
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
